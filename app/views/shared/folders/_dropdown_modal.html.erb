<% title_text = action == "create_sub_folder" ? "Create Sub Folder" : "Edit Folder"%>
<span class="dropdown-item cursor-pointer" href="#">
    <%= title_text %>
</span>

<div class="dropdown-menu dropdown-submenu p-4" aria-labelledby="createFolderDropdownMenu">
    <p class='text-center'><strong> <%= title_text %> </strong></p>
    <%= form_for folder, url: url, method: action == "create_sub_folder" ? :post : :put do |form| %>
        <div class="form-group">
            <div class="form-floating mb-3">  
                <%= form.text_field :name, class: 'form-control text', aria: { label: 'Folder Name:' }, required: 'true' %>
                <%= form.label :name, 'Folder Name:'%>
            </div>
        </div>

        <div class="d-flex w-100">
            <div class="w-50 px-2">
                <button type="button" class="btn btn-primary w-100" data-bs-dismiss="modal">Cancel</button>
            </div>
            <div class="w-50 px-2">
                <%= form.submit action == "create_sub_folder" ? "Submit" : "Save", class: 'btn btn-success w-100', id: 'submit' %>
            </div>
        </div>
    <% end %>
</div>
