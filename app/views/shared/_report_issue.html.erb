<div class="dialogue" id="dialogue">
    <div class="dialogue-clickoff" id="clickoff"></div>
    <div class="dialogue-box">
        <div class="dialogue-title"><h4>Report an Issue</h4></div>
        <%= form_for :report, url: report_issue_path, html: {class: "dialogue-form"} do |f| %>
            <div class='form-type'>
                <%= f.label 'Type of issue: ', class: 'form-label'%>
                <%= f.select :type, ['Something\'s Broken','Can\'t login','Other']  %>
            </div>
            <div class='form-body'>
                <%= f.label 'Describe the problem: ', class: 'form-label'%>
                <%= f.text_area :body, id: 'report_body' %>
            </div>
            <div class='form-buttons'>
                <%= f.submit "Submit", class: 'btn btn-success'%>
                <div class="btn btn-danger", id="cancel">
                    Cancel
                </div>
            </div>
        <% end %> 
    </div>
</div>

<%= javascript_pack_tag 'report_issue' %>