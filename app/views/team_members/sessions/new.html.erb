<main class="ij-form">
  <%= link_to new_user_session_path, class: 'login-link' do %>
    Users <i class="fas fa-sign-in-alt"></i>
  <% end %>
  <div class="container">
    <div class="row d-flex justify-content-center">
      <div class="col-12 col-md-5">
        <div class="form-container">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <h2><i class="fas fa-users"></i> Log in</h2>

            <div class="form-group">
              <p class="text-danger">
                <% if flash[:alert] %>
                  <%= flash[:alert] %>
                <% end %>
              </p>
            </div>

            <div class="form-floating">
              <%= f.email_field :email, class: 'form-control', autocomplete: "email", placeholder: "Email Address" %>
              <%= f.label :email %>
            </div>

            <div class="form-floating">
              <%= f.password_field :password, class: 'form-control', autocomplete: "current-password", placeholder: "Password" %>
              <%= f.label :password %>
            </div>

            <div class="form-group">
              <%= f.submit "Verify your identity with OTP code", class: 'btn btn-primary btn-wrap' %>
            </div>

            <div class="other-actions">
              <%= render(partial: "team_members/shared/links") %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</main>
