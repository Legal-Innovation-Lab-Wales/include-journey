<main class="ij-form edit">
  <div class="col-12 col-md-7">
    <div class="form-container">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |form| %>
        <h2>Edit <%= resource_name.to_s.humanize %></h2>
        
        <div class="form-group">
          <p class="text-danger">
            <% if flash[:alert] %>
              <%= flash[:alert] %>
            <% end %>
          </p>
        </div>

        <div class="form-group">
          <h4>General</h4>
          <div class="row">
            <div class="col-md">
              <div class="form-floating">
                <%= form.text_field :first_name, autofocus: true, class: 'form-control', autocomplete: 'first-name', placeholder: 'First Name', pattern: Rails.application.config.regex_name %>
                <%= form.label :first_name %>
              </div>
            </div>
            <div class="col-md">
              <div class="form-floating">
                <%= form.text_field :last_name, class: 'form-control', autocomplete: 'last-name', placeholder: 'Last Name', pattern: Rails.application.config.regex_name %>
                <%= form.label :last_name %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md">
              <div class="form-floating">
                <%= form.date_field :released_at, class: 'form-control', autocomplete: 'release-date', placeholder: 'Release Date' %>
                <%= form.label :released_at %>
              </div>
            </div>
            <div class="col-md">
              <div class="form-floating">
                <%= form.number_field :mobile_number, class: 'form-control', autocomplete: 'mobile-number', placeholder: 'Mobile No.', pattern: Rails.application.config.regex_telephone %>
                <%= form.label :mobile_number %>
              </div>
            </div>
          </div>
        </div>

        <div class="form-group">
          <h4>Account</h4>
          <div class="row">
            <div class="col-md">
              <div class="form-floating">
                <%= form.email_field :email, class: 'form-control', autocomplete: 'email', placeholder: 'Email Address', pattern: Rails.application.config.regex_email %>
                <%= form.label :email %>
              </div>
            </div>
          </div>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>
          <div class="row">
            <div class="col-md">
              <div class="form-floating change-password">
                <%= form.password_field :password, class: 'form-control', autocomplete: 'password', placeholder: 'Password - 6 characters minimum' %>
                <%= form.label :password do %>
                  Password <span class="small-text">(leave blank if you don't want to change it)</span>
                <% end %>
              </div>
            </div>
            <div class="col-md confirm-password">
              <div class="form-floating">
                <%= form.password_field :password_confirmation, class: 'form-control', autocomplete: 'password', placeholder: 'Password Again' %>
                <%= form.label :password_confirmation %>
              </div>
            </div>
          </div>
        </div>

        <div class="form-group">
          <h4>Additional</h4>
          <div class="row">
            <div class="col-md">
              <div class="form-floating">
                <%= form.date_field :date_of_birth, class: 'form-control', autocomplete: 'date-of-birth', placeholder: 'Date of Birth' %>
                <%= form.label :date_of_birth %>
              </div>
            </div>
            <div class="col-md">
              <div class="form-floating">
                <%= form.select :pronouns, [nil, 'He/Him', 'She/Her', 'They/Them', 'Ze (or Zie)'], { selected: current_user.pronouns }, { class: 'form-select' } %>
                <%= form.label :pronouns %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md">
              <div class="form-floating">
                <%= form.select :sex, [nil, 'Female', 'Male', 'Prefer not to say'], { selected: current_user.sex }, { class: 'form-select' }  %>
                <%= form.label :sex %>
              </div>
            </div>
            <div class="col-md">
              <div class="form-floating">
                <%= form.select :gender_identity, [nil, 'Yes', 'No', 'Prefer not to say'], { selected: current_user.gender_identity }, { class: 'form-select' }  %>
                <%= form.label :gender_identity, 'Gender identity same as sex?' %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md">
              <div class="form-floating">
                <%= form.select :ethnic_group, [nil, 'White', 'Mixed or multiple ethnic groups', 'Asian or Asian British', 'Black, African, Carribean or Black British', 'Other ethnic group', 'Prefer not to say'], { selected: current_user.ethnic_group }, { class: 'form-select' }  %>
                <%= form.label :ethnic_group %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md">
              <div class="form-floating">
                <%= form.select :religion, [nil, 'No religion', 'Christian', 'Buddhist', 'Hindu', 'Jewish', 'Muslim', 'Sikh', 'Any other religion', 'Prefer not to say'], { selected: current_user.religion }, { class: 'form-select' }  %>
                <%= form.label :religion %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md">
              <div class="form-floating">
                <%= form.text_area :disabilities, class: 'form-control', placeholder: 'Disabilities', pattern: Rails.application.config.regex_text_field %>
                <%= form.label :disabilities %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md">
                <%= form.check_box :notifications_enabled %>
                <%= form.label :notifications_enabled, 'Send reminder emails' %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <button class="btn btn-primary my-2 py-2 px-5" type="button" data-bs-toggle="modal" data-bs-target="#updateModal">
            Update
          </button>
        </div>      

        <% unless @deletion_date.present? %>
          <%= link_to 'Cancel my account', registration_path(resource_name), data: { confirm: 'Are you sure?' },
                      method: :delete, class: "btn btn-danger" %>
        <% end %>

        <%= render 'modals/confirm_edit', form: form %>

      <% end %>
    </div>
  </div>
</main>

<%= javascript_pack_tag 'edit_form' %>