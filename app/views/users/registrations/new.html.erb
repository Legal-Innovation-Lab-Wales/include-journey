<main class="ij-form">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'form') do |f| %>
    <h2>Sign up</h2>

    <div class="form-group">
      <%= render "users/shared/error_messages", resource: resource %>
      <p class="text-danger">
        <% if flash[:alert] %>
          <%= flash[:alert] %>
        <% end %>
      </p>
    </div>

    <div class="row g-2">
      <div class="col-md">
        <div class="form-floating">
          <%= f.text_field :first_name, autofocus: true, class: 'form-control', autocomplete: "first-name", placeholder: "First Name" %>
          <%= f.label :first_name %>
        </div>
      </div>

      <div class="col-md">
        <div class="form-floating">
          <%= f.text_field :last_name, class: 'form-control', autocomplete: "last-name", placeholder: "Last Name" %>
          <%= f.label :last_name %>
        </div>
      </div>
    </div>

    <div class="form-floating">
      <%= f.number_field :mobile_number, class: 'form-control', autocomplete: "mobile-number", placeholder: "Mobile No." %>
      <%= f.label :mobile_number %>
    </div>

    <div class="form-floating">
      <%= f.date_field :release_date, class: 'form-control', autocomplete: "release-date", placeholder: "Release Date" %>
      <%= f.label :release_date %>
    </div>

    <div class="form-floating">
      <%= f.email_field :email, class: 'form-control', autocomplete: "email", placeholder: "Email Address" %>
      <%= f.label :email %>
    </div>

    <div class="form-floating">
      <%= f.password_field :password, class: 'form-control', autocomplete: "password", placeholder: "Password - 6 characters minimum" %>
      <%= f.label :password, "Password (6 characters minimum)" %>
    </div>

    <div class="form-floating">
      <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "password", placeholder: "Password Again"  %>
      <%= f.label :password_confirmation %>
    </div>

    <div class="form-group">
      <%= f.submit "Sign up", class: 'w-100 btn btn-lg btn-primary' %>
    </div>

    <div class="other-actions">
      <%= render "users/shared/links" %>
    </div>
  <% end %>
</main>
