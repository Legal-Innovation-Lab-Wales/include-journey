<main class="ij-form">
  <div class="col-12 col-md-7">
    <div class="form-container">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'form') do |f| %>
        <h2><i class="fas fa-user"></i> Sign up</h2>

        <div class="form-group">
          <p class="text-danger">
            <% if flash[:alert] %>
              <%= flash[:alert] %>
            <% end %>
          </p>
        </div>

        <div class="row g-2">
          <div class="col-md">
            <div class="form-floating">
              <%= f.text_field :first_name, autofocus: true, class: 'form-control', autocomplete: "first-name", placeholder: "First Name", pattern: '^[a-zA-Z0-9_ ]*$'%>
              <%= f.label :first_name %>
            </div>
          </div>

          <div class="col-md">
            <div class="form-floating">
              <%= f.text_field :last_name, class: 'form-control', autocomplete: "last-name", placeholder: "Last Name", pattern: '^[a-zA-Z0-9_ ]*$' %>
              <%= f.label :last_name %>
            </div>
          </div>
        </div>

        <div class="form-floating">
          <%= f.number_field :mobile_number, class: 'form-control', autocomplete: "mobile-number", placeholder: "Mobile No.", pattern: '^[0-9]*$' %>
          <%= f.label :mobile_number %>
        </div>

        <div class="form-floating">
          <%= f.date_field :released_at, class: 'form-control', autocomplete: "release-date", placeholder: "Release Date" %>
          <%= f.label :released_at %>
        </div>

        <div class="form-floating">
          <%= f.email_field :email, class: 'form-control', autocomplete: "email", placeholder: "Email Address" %>
          <%= f.label :email %>
        </div>

        <div class="form-floating">
          <%= f.password_field :password, class: 'form-control', autocomplete: "password", placeholder: "Password - 6 characters minimum" %>
          <%= f.label :password, "Password (6 characters minimum)" %>
        </div>

        <div class="form-floating">
          <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "password", placeholder: "Password Again" %>
          <%= f.label :password_confirmation %>
        </div>

        <div class="form-check form-switch">
          <%= f.check_box :terms, class: 'form-check-input' %>
          <%= f.label :terms, class: 'form-check-label' do %>
            I have read and agree to the sites <%= link_to 'Terms and Conditions', '/terms', class: 'form-link' %>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.submit "Sign up", class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</main>
