<%= render 'layouts/searchable', class_list: 'user goals-archive', header: 'Archived Goals',
           index: 'goals_archive_index' do %>
  <div class="table-container">
    <table class="table table-dark table-striped">
      <thead>
      <th scope="col">Length</th>
      <th scope="col">Goal</th>
      <th scope="col">Created On</th>
      <th scope="col">Achieved On</th>
      <th scope="col"></th>
      </thead>
      <tbody>
      <% @resources.each do |goal| %>
        <tr>
          <td><%= goal.short_term ? 'Short' : 'Long' %></td>
          <td><%= goal.goal %></td>
          <td><%= goal.created %></td>
          <td><%= goal.achieved %></td>
          <td><%= render 'users/goals/control', goal: goal %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
<% end %>

<%= render 'users/goals/goal_modal' %>
